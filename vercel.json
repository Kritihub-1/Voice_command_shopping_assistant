{
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "destination": "https://your-backend-url.com/api/$1" },
    { "src": "/(.*)", "dest": "frontend/$1" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "status": 404, "dest": "frontend/index.html" }
  ]
}
